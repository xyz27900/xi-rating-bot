{
  "name": "social-credits-api",
  "version": "0.1.0",
  "author": "Evgeniy Kozlov",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "nodemon",
    "lint": "eslint --no-fix ./src",
    "build": "rm -rf ./build && tsc && tscpaths -p tsconfig.json -s ./src -o ./build",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "typeorm:migrate": "npm run typeorm -- migration:run --dataSource src/data.source.ts",
    "typeorm:drop": "npm run typeorm -- schema:drop --dataSource src/data.source.ts"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "grammy": "^1.7.2",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0",
    "typeorm": "^0.3.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.23",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.4",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.6.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
